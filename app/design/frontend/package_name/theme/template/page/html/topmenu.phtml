<?php
$_helper = Mage::helper('catalog/category');
$_categories = $_helper->getStoreCategories();
?>

<nav class="navbar navbar-default">
    <div class="container-fluid">
        <!-- Brand and toggle get grouped for better mobile display -->
        <div class="navbar-header">
            <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#category-menu" aria-expanded="false">
                <span class="sr-only">Toggle navigation</span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
            </button>
        </div>

        <!-- Collect the nav links, forms, and other content for toggling -->
        <div class="collapse navbar-collapse" id="category-menu">
            <ul class="nav navbar-nav">
                <?php
                if (count($_categories) > 0){
                    foreach($_categories as $_category){
                        $_category = Mage::getModel('catalog/category')->load($_category->getId());
                        $_subcategories = $_category->getChildrenCategories();
                        if (count($_subcategories) > 0) {
                            echo "<li class='dropdown'><a href='<?php echo $_category->getUrl($_category); ?>' class='dropdown-toggle' data-toggle='dropdown'>" . $_category->getName() . " <span class='caret'></span></a>";
                            echo "<ul class='dropdown-menu'>";
                            foreach($_subcategories as $_subcategory){
                                echo "<li><a href='<?php echo $_subcategory->getUrl($_subcategory); ?>'>" . $_subcategory->getName() . "</a></li>";
                            }
                            echo "</ul></li>";

                        } else {
                            echo "<li><a href='<?php echo $_category->getUrl($_category); ?>'>" . $_category->getName() . "</a></li>";
                        }
                    }
                }
                ?>
            </ul>
        </div><!-- /.navbar-collapse -->
    </div><!-- /.container-fluid -->
</nav>